@model IEnumerable<Face.EntidadesDeNegocio.Cargo>

<h1>Gestión de Cargos</h1>
<a asp-action="Crear" class="btn btn-success">Crear Nuevo Cargo</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Fecha de Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cargo in Model)
        {
            <tr>
                <td>@cargo.Id</td>
                <td>@cargo.Nombre</td>
                <td>@cargo.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cargo.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@cargo.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
