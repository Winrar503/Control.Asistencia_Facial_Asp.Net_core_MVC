@{
    ViewData["Title"] = "Reporte General";
    var totalEmpleados = ViewBag.TotalEmpleados;
    var empleadosActivos = ViewBag.EmpleadosActivos;
    var totalAsistencias = ViewBag.TotalAsistencias;
    var asistenciasExitosas = ViewBag.AsistenciasExitosas;
    var asistenciasFallidas = ViewBag.AsistenciasFallidas;
    var totalCargos = ViewBag.TotalCargos;
    var datosPorCargo = ViewBag.DatosPorCargo;
}

<div class="container my-5">
    <h1 class="text-center mb-4 text-primary" style="font-weight: bold; font-size: 3.5rem;">Reporte General del Sistema</h1>
    <p class="text-center text-muted mb-5" style="font-size: 1.2rem;">Visualización de métricas clave y gráficos interactivos</p>

    <!-- Tarjetas de métricas generales -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-body">
                    <h5 class="card-title text-primary">Total Empleados</h5>
                    <p class="display-4 text-dark fw-bold">@totalEmpleados</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-body">
                    <h5 class="card-title text-success">Empleados Activos</h5>
                    <p class="display-4 text-dark fw-bold">@empleadosActivos</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-light">
                <div class="card-body">
                    <h5 class="card-title text-info">Total Cargos</h5>
                    <p class="display-4 text-dark fw-bold">@totalCargos</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="text-center mb-4">Distribución de Empleados por Cargo</h5>
                    <canvas id="chartCargos"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h5 class="text-center mb-4">Resumen de Asistencias</h5>
                    <canvas id="chartAsistencias"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla con comentarios -->
    <div class="card shadow-lg border-0 mt-5">
        <div class="card-body">
            <h4 class="mb-4 text-primary">Comentarios de Asistencias</h4>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Empleado</th>
                        <th>Comentario</th>
                    </tr>
                </thead>
                <tbody id="tablaComentarios">
                    <tr>
                        <td colspan="2" class="text-center">Cargando comentarios...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Botón para descargar el reporte -->
    <div class="text-center mt-5">
        <a href="/ReporteGeneral/DescargarReportePdf" class="btn btn-primary btn-lg rounded-pill">
            <i class="fas fa-download"></i> Descargar Reporte en PDF
        </a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const datosPorCargo = @Html.Raw(Json.Serialize(datosPorCargo));
        const ctxCargos = document.getElementById('chartCargos').getContext('2d');
        const ctxAsistencias = document.getElementById('chartAsistencias').getContext('2d');

        // Gráfico de Empleados por Cargo
        new Chart(ctxCargos, {
            type: 'pie',
            data: {
                labels: datosPorCargo.map(d => d.Cargo),
                datasets: [{
                    data: datosPorCargo.map(d => d.TotalEmpleados),
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'],
                }]
            },
            options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
        });

        // Gráfico de Resumen de Asistencias
        new Chart(ctxAsistencias, {
            type: 'bar',
            data: {
                labels: ['Exitosas', 'Fallidas', 'Totales'],
                datasets: [{
                    label: 'Asistencias',
                    data: [@asistenciasExitosas, @asistenciasFallidas, @totalAsistencias],
                    backgroundColor: ['#28a745', '#dc3545', '#007bff']
                }]
            },
            options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });
    });
</script>
