@model Face.EntidadesDeNegocio.Empleados

@{
    ViewData["Title"] = "Eliminar";
}

<div class="container mt-5">
    <div class="card border-danger shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="m-0">Confirmación de Eliminación</h2>
        </div>
        <div class="card-body p-5">
            <h4 class="text-center text-secondary">¿Estás seguro de que deseas eliminar este empleado?</h4>
            <p class="text-center text-muted mb-4">Esta acción no se puede deshacer.</p>
            <hr />

            <div class="row justify-content-center mb-4">
                <div class="col-md-8">
                    <!-- Información del empleado en formato de lista detallada -->
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Nombre</strong>
                            <span>@Html.DisplayFor(model => model.Nombre)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Edad</strong>
                            <span>@Html.DisplayFor(model => model.Edad)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Email</strong>
                            <span>@Html.DisplayFor(model => model.Email)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Cargo</strong>
                            <span>@Html.DisplayFor(model => model.Cargo)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Teléfono</strong>
                            <span>@Html.DisplayFor(model => model.Telefono)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Estado</strong>
                            <span>@Html.DisplayFor(model => model.Estado)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Fecha de Registro</strong>
                            <span>@Html.DisplayFor(model => model.FechaRegistro)</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="d-flex justify-content-center mt-4">
                <form asp-action="Delete" method="post" class="me-2">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger rounded-pill px-4 py-2">Eliminar</button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilo personalizado */
    .card-header {
        background-color: #dc3545;
        color: white;
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-body h4 {
        font-weight: bold;
    }

    .list-group-item {
        font-size: 1rem;
        background-color: #f9f9f9;
        border: none;
    }

    .btn-danger {
        font-weight: bold;
        color: white;
        background-color: #dc3545;
        border-color: #dc3545;
        transition: background-color 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #b02a37;
        border-color: #b02a37;
    }

    .btn-outline-secondary {
        color: #6c757d;
        border: 1px solid #6c757d;
        transition: color 0.3s ease, background-color 0.3s ease;
    }

    .btn-outline-secondary:hover {
        color: white;
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>


