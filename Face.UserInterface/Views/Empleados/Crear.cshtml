@model Face.EntidadesDeNegocio.Empleados
@using Face.EntidadesDeNegocio
@{
    ViewData["Title"] = "Crear";
    List<Asistencias> asistencias = ViewBag.Asistencias as List<Asistencias>;
    List<Reportes> reportes = ViewBag.Reportes as List<Reportes>;
    List<Horarios> horarios = ViewBag.Horarios as List<Horarios>;
    List<Fotos> fotos = ViewBag.Fotos as List<Fotos>;
}

<div class="container py-5">
    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="text-gradient fw-bold">Registrar Nuevo Empleado</h1>
        <p class="text-muted fs-5">Completa los campos con la información del empleado para guardarlo en la plataforma.</p>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 bg-light">
                    <h4 class="card-title text-center text-secondary mb-4">Detalles del Empleado</h4>
                    <form asp-action="Crear">
                        <!-- Validación -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert" style="display: none;"></div>

                        <!-- Nombre -->
                        <div class="form-group mb-4">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Nombre" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Ej. Juan Pérez" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- DUI -->
                        <div class="form-group mb-4">
                            <label asp-for="Dui" class="form-label fw-bold">DUI</label>
                            <input asp-for="Dui" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Ej. 00000000-0" />
                            <span asp-validation-for="Dui" class="text-danger"></span>
                        </div>

                        <!-- Edad y Cargo -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Edad" class="form-label fw-bold">Edad</label>
                                <input asp-for="Edad" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Ej. 30" />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="CargoId" class="form-label fw-bold">Cargo</label>
                                <select asp-for="CargoId" class="form-control form-control-lg rounded-3 shadow-sm">
                                    <option value="">Seleccionar Cargo</option>
                                    @foreach (var cargo in ViewBag.Cargos)
                                    {
                                        <option value="@cargo.Id">@cargo.Nombre</option>
                                    }
                                </select>
                                <span asp-validation-for="CargoId" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Ej. ejemplo@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Teléfono y Estado -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                                <input asp-for="Telefono" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Ej. 1234-5678" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                                <select asp-for="Estado" class="form-control form-control-lg rounded-3 shadow-sm">
                                    <option value="true">Activo</option>
                                    <option value="false">Inactivo</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Fecha de Registro -->
                        <div class="form-group mb-4">
                            <label asp-for="FechaRegistro" class="form-label fw-bold">Fecha de Registro</label>
                            <input asp-for="FechaRegistro" type="date" class="form-control form-control-lg rounded-3 shadow-sm" />
                            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 rounded-3 shadow-sm">
                                <i class="fas fa-arrow-left me-2"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary px-5 py-2 rounded-3 shadow-sm">
                                <i class="fas fa-save me-2"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Fondo general */
    body {
        background-color: #f8f9fa;
        font-family: 'Inter', sans-serif;
        color: #333;
    }

    /* Títulos y Encabezados */
    h1.text-gradient {
        font-size: 2.8rem;
        font-weight: 700;
        background: linear-gradient(90deg, #4b6cb7, #182848);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }

    /* Fondo del formulario */
    .bg-light {
        background-color: #ffffff;
    }

    /* Campos del formulario */
    .form-control-lg {
        height: 50px;
        padding: 12px 20px;
        border: 1px solid #ced4da;
        border-radius: 0.75rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control-lg:focus {
            border-color: #4b6cb7;
            box-shadow: 0 0 8px rgba(75, 108, 183, 0.4);
        }

    /* Botones */
    .btn-primary {
        background: linear-gradient(90deg, #4b6cb7, #182848);
        color: #fff;
        border: none;
        border-radius: 0.75rem;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #182848, #4b6cb7);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(75, 108, 183, 0.3);
        }

    .btn-outline-secondary {
        color: #495057;
        border: 1px solid #ced4da;
        border-radius: 0.75rem;
        transition: all 0.3s ease-in-out;
    }

        .btn-outline-secondary:hover {
            background-color: #ced4da;
            color: white;
            box-shadow: 0 4px 12px rgba(206, 212, 218, 0.2);
        }

    /* Tarjeta del formulario */
    .card {
        border-radius: 1rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    /* Etiquetas de formulario */
    .form-label {
        color: #555;
    }
</style>

<script>
    // Validación dinámica para el campo Teléfono
    document.getElementById("Telefono").addEventListener("input", function (e) {
        var value = e.target.value.replace(/\D/g, ""); // Remover caracteres no numéricos
        if (value.length > 4) {
            value = value.slice(0, 4) + "-" + value.slice(4);
        }
        e.target.value = value;
    });

    // Validación dinámica para el campo DUI
    document.getElementById("Dui").addEventListener("input", function (e) {
        var value = e.target.value.replace(/\D/g, ""); // Remover caracteres no numéricos
        if (value.length > 8) {
            value = value.slice(0, 8) + "-" + value.slice(8);
        }
        e.target.value = value;
    });
</script>