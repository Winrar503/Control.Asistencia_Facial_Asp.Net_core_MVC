@model Face.EntidadesDeNegocio.Horarios

@{
    ViewData["Title"] = "Detalles del Horario";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="m-0">Detalles del Horario</h2>
        </div>
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h3 class="mt-3">@Model.Empleados.Nombre</h3>
                <p class="text-muted">ID de Empleado: @Model.EmpleadosId</p>
            </div>

            <hr />

            <!-- Información del horario en formato de lista detallada -->
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Hora de Entrada:</strong>
                            <span>@Model.HoraEntrada.ToString("hh\\:mm")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Hora de Salida:</strong>
                            <span>@Model.HoraSalida.ToString("hh\\:mm")</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="d-flex justify-content-center mt-4">
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary rounded-pill px-4 me-2" })
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos personalizados para la tarjeta de detalles */
    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-body h3 {
        font-weight: bold;
    }

    .list-group-item {
        background-color: #f9f9f9;
        font-size: 1rem;
        border: none;
    }

    .btn-primary {
        font-weight: bold;
        color: white;
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
        transition: color 0.3s ease, background-color 0.3s ease;
    }

    .btn-outline-secondary:hover {
        color: white;
        background-color: #6c757d;
    }
</style>



