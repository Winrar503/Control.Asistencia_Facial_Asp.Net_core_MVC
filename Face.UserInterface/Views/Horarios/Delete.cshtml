@model Face.EntidadesDeNegocio.Horarios

@{
    ViewData["Title"] = "Eliminar Horario";
}

<div class="container mt-5">
    <div class="card border-danger shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="m-0">Confirmación de Eliminación</h2>
        </div>
        <div class="card-body p-5">
            <h4 class="text-center text-secondary">¿Estás seguro de que deseas eliminar este horario?</h4>
            <p class="text-center text-muted mb-4">Esta acción no se puede deshacer.</p>
            <hr />

            <div class="row justify-content-center mb-4">
                <div class="col-md-8">
                    <!-- Información del horario en formato de lista detallada -->
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Empleado ID:</strong>
                            <span>@Html.DisplayFor(model => model.EmpleadosId)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Hora de Entrada:</strong>
                            <span>@Html.DisplayFor(model => model.HoraEntrada)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Hora de Salida:</strong>
                            <span>@Html.DisplayFor(model => model.HoraSalida)</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="d-flex justify-content-center mt-4">
                <form asp-action="Delete" method="post" class="me-2">
                    <button type="submit" class="btn btn-danger rounded-pill px-4 py-2">Confirmar Eliminación</button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">Cancelar</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos personalizados para la tarjeta de eliminación */
    .card-header {
        background-color: #dc3545;
        color: white;
        font-size: 1.25rem;
        font-weight: bold;
    }

    .card-body h4 {
        font-weight: bold;
    }

    .list-group-item {
        background-color: #f9f9f9;
        font-size: 1rem;
        border: none;
    }

    .btn-danger {
        font-weight: bold;
        color: white;
        background-color: #dc3545;
        border-color: #dc3545;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #b02a37;
            border-color: #b02a37;
        }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
        transition: color 0.3s ease, background-color 0.3s ease;
    }

        .btn-outline-secondary:hover {
            color: white;
            background-color: #6c757d;
        }
</style>




