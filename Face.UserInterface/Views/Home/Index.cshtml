@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WinFaceTrack - Gestión de Empleados</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="font-sans antialiased">
    <!-- Hero Section - Modernizado y menos invasivo -->
    <div class="relative min-h-[70vh] flex items-center justify-center bg-gradient-to-br from-gray-900 to-gray-800 overflow-hidden">
        <!-- Patrón de fondo decorativo -->
        <div class="absolute inset-0 opacity-20">
            <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%239C92AC\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-10"></div>
        </div>
        
        <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-white mb-6 tracking-tight">
                Bienvenido a 
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-blue-600">
                    WinFaceTrack
                </span>
            </h1>
            <p class="mt-6 text-xl text-gray-300 max-w-2xl mx-auto">
                Explora nuestras herramientas avanzadas para la gestión y reconocimiento de empleados.
            </p>
            <div class="mt-10">
                <a href="@Url.Action("Inicio", "Home")" 
                   class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-300 ease-in-out transform hover:scale-105">
                    Inicio
                    <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
        </div>
    </div>

    <!-- Sección Acerca de -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
                    Acerca de WinFaceTrack
                </h2>
                <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
                    WinFaceTrack es una plataforma que facilita la gestión de empleados, asistencia y control de horarios de manera eficiente. Diseñada para optimizar el flujo de trabajo y proporcionar información en tiempo real.
                </p>
            </div>
        </div>
    </section>

    <!-- Sección de Funcionalidades -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center text-gray-900 sm:text-4xl mb-16">
                Funcionalidades Principales
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Gestión de Empleados -->
                <div class="relative group">
                    <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-blue-400 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                    <div class="relative p-6 bg-white ring-1 ring-gray-900/5 rounded-lg leading-none flex flex-col items-center">
                        <i class="fas fa-users text-4xl text-blue-600 mb-4 transform transition-transform group-hover:scale-110"></i>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Gestión de Empleados</h3>
                        <p class="text-gray-600 text-center">
                            Administra los datos de los empleados y controla su información de manera segura.
                        </p>
                    </div>
                </div>

                <!-- Control de Asistencia -->
                <div class="relative group">
                    <div class="absolute -inset-1 bg-gradient-to-r from-green-600 to-green-400 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                    <div class="relative p-6 bg-white ring-1 ring-gray-900/5 rounded-lg leading-none flex flex-col items-center">
                        <i class="fas fa-calendar-check text-4xl text-green-600 mb-4 transform transition-transform group-hover:scale-110"></i>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Control de Asistencia</h3>
                        <p class="text-gray-600 text-center">
                            Registra y consulta la asistencia del personal en tiempo real.
                        </p>
                    </div>
                </div>

                <!-- Reportes y Estadísticas -->
                <div class="relative group">
                    <div class="absolute -inset-1 bg-gradient-to-r from-purple-600 to-purple-400 rounded-lg blur opacity-25 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
                    <div class="relative p-6 bg-white ring-1 ring-gray-900/5 rounded-lg leading-none flex flex-col items-center">
                        <i class="fas fa-chart-line text-4xl text-purple-600 mb-4 transform transition-transform group-hover:scale-110"></i>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">Reportes y Estadísticas</h3>
                        <p class="text-gray-600 text-center">
                            Obtén reportes detallados y estadísticas sobre el rendimiento del equipo.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de Testimonios -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center text-gray-900 sm:text-4xl mb-16">
                Opiniones de Nuestros Usuarios
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- Testimonio 1 -->
                <div class="bg-gray-50 rounded-xl p-8 shadow-sm hover:shadow-md transition-shadow duration-300">
                    <div class="h-full flex flex-col justify-between">
                        <div>
